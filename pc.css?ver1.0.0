@charset "UTF-8";

body{
	font-size: 1.6rem;
	letter-spacing: 0.05rem;
	padding: 0 5rem 2rem;
	}

section{
	max-width: 100rem;
	margin: 4rem auto;
	}

.text{
	line-height: 1.6;
	}

.box strong{
	padding: 0 0.5rem;
	}

.text a{
	margin: 0 0.5rem;
	}

.text a::after{
	margin-left: 0.2rem;
	}

#prof{
	display: flex;
	align-items: center;
	}

#me{
	margin-right: 4rem;
	}

/* ↓プロフィールアイコンのサイズ */
#me img{
	width: 15rem;
	height: 15rem;
	}

#prof h1{
	font-size: 3rem;
	letter-spacing: 0.2rem;
	margin-bottom: 1rem;
	}

#prof .text{
	margin-bottom: 2rem;
	}

#social a{
	font-size: 1.2rem;
	margin-right: 1.5rem;
	}

/* ↓SNSアイコンのサイズ */
#social a i{
	width: 7rem;
	height: 7rem;
	font-size: 3.5rem;
	line-height: 7rem;
	margin-bottom: 0.5rem;
	}

.box{
	padding: 1rem 4rem;
	border-radius:2rem;
	}

.box h2{
	font-size: 2.1rem;
	letter-spacing: 0.15rem;
	padding-bottom: 0.5rem;
	border-bottom-width: 3px;
	}

.box h3{
	margin: 2rem 0 -1.2rem;
	font-size: 1.8rem;
	letter-spacing: 0.15rem;
	padding-bottom: 0.5rem;
	border-bottom-width: 2px;
	}

.box > *{
	margin: 2.5rem 0;
	}

dl,ul {
	padding-left: 2.3rem;
	line-height: 1.6;
	}

ul{
	column-gap: 4rem;
	}

ul.column2{
	column-count: 2;
	}

ul.column3{
	column-count: 3;
	}

dt::before,
li::before{
	left: -2rem;
	}

li{
	margin-bottom: 1rem;
	}

dd {
	font-size: .95em;
	margin-bottom: 1.5rem;
	}

.booklist{
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;
	align-items: flex-start;
	}
	
.book{
	display: flex;
	width: calc(50% - 1.5rem);
	margin-bottom: 2.5rem;
	}

.book:nth-last-child(2){
	margin-bottom: 0;
	}

.book .hyoushi{
	width: 25%;
	margin-right: 1.7rem;
	flex-shrink:0;
	}

.book h4{
	font-size: 1.8rem;
	}

.gaiyou{
	display: flex;
	flex-wrap: wrap;
	align-content: space-between;
	}

.book p{
	font-size: 1.5rem;
	line-height: 1.5;
	margin: 1rem 0;
	}

.book p.product{
	font-size: 1.4rem;
	margin: 0.6rem 0 -0.8rem;
	}

.book .order a{
	letter-spacing: 0.3rem;
	line-height: 3rem;
	border-width: 2px;
	}

.order a:nth-child(n + 2){
	margin-left: 0.5rem;
	}

.res{
	line-height: 1.6;
	}

.res q::before{
	margin-right: 0.5rem;
	}

details > *{
	margin: 2.5rem 0;
	}

summary{
	margin: 0;
	height: 3rem;
	line-height: 3rem;
	letter-spacing: 0.2rem;
	border-radius:1.5rem;
	}
